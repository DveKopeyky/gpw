{#
/**
 * @file
 * Default theme implementation to display a view of unformatted rows.
 *
 * Available variables:
 * - title: The title of this group of rows. May be empty.
 * - rows: A list of the view's row items.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's content.
 * - view: The view object.
 * - default_row_class: A flag indicating whether default classes should be
 *   used on rows.
 *
 * @see template_preprocess_views_view_unformatted()
 *
 * @ingroup themeable
 */
#}

{% set availableColumns = 3 %}
{% set startColumn = 1 %}

{% set rows_count = view.total_rows %}
{% set current_title = title %}

{#{% set rows_count = rows|length %}#}
{% set columnLength = (rows_count / availableColumns)|round(0, 'floor') %}
{% if (rows_count % availableColumns > 0) %}
  {% set columnLength = columnLength + 1 %}
{% endif %}

{% for row in rows %}
  {%
    set row_classes = [
    default_row_class ? 'views-row',
  ]
  %}
  {% set currentIndex = row.content["#row"].index + 1 %}
  {% set columnNumber = (currentIndex / columnLength)|round(0, 'floor') + 1 %}

  {# Start new column #}
  {% if (currentIndex == 1) or (currentIndex % columnLength == 1) %}
    <div class="thesaurus-column column-{{ columnNumber }} col-sm-{{ (12 / availableColumns)|round(0, 'floor') }}">
    {% if title %}
      <h3>{{ title }}</h3>
      {% set current_title = '' %}
    {% endif %}
  {% endif %}

      {% if current_title %}
        <h3>{{ current_title }}</h3>
        {% set current_title = '' %}
      {% endif %}

      <div{{ row.attributes.addClass(row_classes) }}>
        {{ row.content }}
      </div>

  {# Close column #}
  {% if (currentIndex == rows_count) or (currentIndex % columnLength == 0) %}
    </div>
  {% endif %}

{% endfor %}
