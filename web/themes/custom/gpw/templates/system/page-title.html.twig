{#
/**
 * @file
 * Default theme implementation for page titles.
 *
 * Available variables:
 * - title_attributes: HTML attributes for the page title element.
 * - title_prefix: Additional output populated by modules, intended to be
 *   displayed in front of the main title tag that appears in the template.
 * - title: The page title, for use in the actual content.
 * - title_suffix: Additional output populated by modules, intended to be
 *   displayed after the main title tag that appears in the template.
 *
 * @ingroup templates
 *
 * @see template_preprocess_page_title()
 */
#}
{% if is_full_course %}
  <div class="full-course-hero row">
    <div class="col-left col-sm-8">
{% endif %}

{% if title %}
    <h1{{ title_attributes.addClass('page-header') }}>{{ title }}</h1>
{% endif %}

{% if subtitle %}
    <div class="subtitle {{ subtitle['#class'] }}">{{ subtitle }}</div>
{% endif %}

{% if signup_link %}
    <div class="signup-link clearfix">{{ signup_link }}</div>
{% endif %}

{% if video %}
    <div class="hero-video clearfix">{{ video }}</div>
{% endif %}

{% if content_left %}
    <div class="content-group">{{ content_left }}</div>
{% endif %}

{% if is_full_course %}
    </div>
{% endif %}

{% if is_full_course and content_right %}
  <div class="col-right col-sm-4">
    <div class="content-group">{{ content_right }}</div>
  </div>
{% endif %}

{% if is_full_course %}
    </div>
  </div>
{% endif %}
