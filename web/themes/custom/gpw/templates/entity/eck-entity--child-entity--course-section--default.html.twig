{% set id = eck_entity.id() %}
  <div {{ attributes }}>
    <div class="panel-group">
      <div class="panel panel-default">
        <div class="panel-heading">
          <a class="panel-title" data-toggle="collapse" href="#collapse-curriculum-{{ id|clean_id }}">
            <div class="course-section-title"><span class="icon">+</span>{{ entity['title'] }}</div>
            <div class="course-lectures-number">{{ entity['field_lectures_number'] }}</div>
            <div class="course-videos-duration">{{ entity['field_videos_duration'] }}</div>
          </a>
        </div>
        <div id="collapse-curriculum-{{ id|clean_id }}" class="panel-collapse collapse">
          <div class="panel-body">{{ entity.field_videos }}</div>
        </div>
      </div>
    </div>
  </div>
