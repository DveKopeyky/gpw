{% if article_docs %}
  <div class="treaty-tabs col-sm-12">
    <div class="gp-leo-treaty-articles-label accordion-label" data-list-id="trety-{{ treaty_item.is_nid }}-article-list">{{ 'Treaty articles'|t }} ({{ article_docs|length }})</div>
