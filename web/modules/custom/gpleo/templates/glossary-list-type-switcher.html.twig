{% spaceless %}
<div class="glossary-wrapper row">
  <div class="glossary-tabs col-sm-8">
    <div class="glossary-tabs-label">{{ "Display glossary terms "| t }}</div>
    <a href="{{ topic_page_link }}" class="{{ topic_link_classes | join(' ') }}">{{ "By topic" | t }}</a>
    <a href="{{ alphabetically_page_link }}" class="{{ alphabetically_link_classes| join(' ') }}">{{ "Alphabetically" | t }}</a>
  </div>
  <div class="glossary-tabs col-sm-4">
    <a href="{{ download_link }}" class="btn btn-outline  glossary-download pull-right">{{ "Download all terms" | t }}</a>
  </div>
</div>
{% endspaceless %}
